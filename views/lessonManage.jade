    // 彈跳視窗 編輯課程細節
    #bounce_editlesson.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header.bg-blue
            button.close(type='button', data-dismiss='modal', aria-hidden='true')
              i.fa.fa-times-circle(style='font-size:20px;color:white;')
            font(style='font-size:18px;font-weight:bold;') 編輯課程細節
          .modal-body(align='left', style='height:520px;overflow-y:scroll;')
            .form-group
              .row
                .col-md-12
                  div(style='margin:0 0 20px 0;')
                    .row
                      .col-md-12.form-group
                        | 課程名稱:
                      .col-md-12.form-group.form_name.form(style='text-align:center;')
                        b(style='font-size:30px;')
                          span#lessonName
                  div(style='margin:0 0 20px 0;')
                    .row
                      .col-md-6.form-group.form_class.form
                        | 使用教室
                        font#lockTip
                        select#lessonBuilding.form-control
                        select#lessonFloor.form-control
                        select#lessonClass.form-control
                      .col-md-6.form-group.form_time.form
                        | 上課時間
                        input#lessonTime.date-picker.form-control(type='text', placeholder='開始時間')
                      .col-md-6.form-group.form_period.form
                        | 上課時段
                        br
                        select#lessonPeriod.form-control(name='lessonPeriod')
                          option(value='請選擇', selected="selected") 請選擇
                          option(value='A1') A1 (09:15 ~ 11:45)
                          option(value='A2') A2 (11:45 ~ 13:15)
                          option(value='P1') P1 (13:15 ~ 15:45)
                          option(value='P2') P2 (16:00 ~ 18:00)
                          option(value='P3') P3 (19:00 ~ 21:30)
                  div(style='margin:0 0 20px 0;')
                    .row
                      .col-md-6.form-group.form_lessondetailName.form
                        | 聯絡人姓名(單位):
                        input#lessondetailName.form-control(type='text', placeholder='請填入聯絡人姓名',disabled='disabled')
                      .col-md-6.form-group.form_lessondetailPhone.form
                        | 聯絡人電話
                        input#lessondetailPhone.form-control(type='text', placeholder='請填入聯絡人電話',disabled='disabled')
                                
                  div(style='margin:0 0 20px 0;')
                    .row
                      .col-md-12.form-group.form_people.form
                        | 上課人數
                        input#lessonPeople.form-control(type='text', placeholder='請填入上課人數')
                  div(style='margin:0 0 20px 0;')
                    .row
                      .col-md-12.form-group.form_note.form
                        i.fa.fa-comments(aria-hidden='true', style='font-size:20px;')
                        | 備註:
                        textarea#lessonNote.form-control(rows='4', placeholder='您想說甚麼...')
          .modal-footer
            input#btnEditSubmitlesson.btn.btn-primary.btn-embossed(type='button', value='確定')
            button#btnEditCancellesson.btn.btn-default.btn-embossed 取消
    
    // 彈跳視窗 新增課程ID
    #bounce_new.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true', style='overflow-y: hidden')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true')
              i.fa.fa-times-circle(style='font-size:20px;')
            font(style='font-size:18px;font-weight:bold;') 新增課程ID
          .modal-body(align='left', style='height:300px;overflow-y:hidden;')
            .form-group
              .row
                .col-md-12
                  div(style='margin:0 0 20px 0;')
                    .form-group.form_lessonName
                      i.fa.fa-child(style='font-size:20px;')
                      | 課程名稱:
                      input#lessonIDName.form-control(type='text', placeholder='請填入課程名稱', name='lessonNameID')
                  div(style='margin:0 0 20px 0;')
                    .form-group.form_abbreviation
                      | 課程代號(簡稱):
                      input#lessonIDAbbreviation.form-control(type='text', placeholder='請輸入中文或英文代號(簡稱), 如果多個代號請使用半形空格(一格)隔開', name='lessonAbbreviation')
                  div(style='margin:0 0 20px 0;')
                    .row
                      .col-md-6.form-group.form_contractName
                        i.fa.fa-user(aria-hidden='true', style='font-size:20px;')
                        | 聯絡人姓名(單位):
                        input#lessonIDContractName.form-control(type='text', placeholder='請填入聯絡人姓名')
                      .col-md-6.form-group.form_telephone
                        i.fa.fa-phone(aria-hidden='true', style='font-size:20px;')
                        | 聯絡人電話:
                        input#lessonIDContractPhone.form-control(type='text', placeholder='請填入聯絡人電話')
          .modal-footer
            input#btnSubmitID.btn.btn-primary.btn-embossed(type='button', value='確定')
            button#btnCancelID.btn.btn-default.btn-embossed 取消
    // 彈跳視窗 編輯課程ID
