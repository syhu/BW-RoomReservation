  body
    #header
      | 課程管理
      i.fa.fa-filter
    #left.panel
      .row
        .col-lg-12
          .form-group
            .row
              .col-md-12
                div(style='margin: 20px 20px 20px 20px;')
                  .row
                    .col-md-12.form-group.has-success
                      label 查詢地點:
                      select#selectLocal.form-control
                        option(value='請選擇') 請選擇
                        option(value='7f') 7樓
                        option(value='12f') 12樓
                        option(value='13f') 13樓
                        option(value='liren2f') 里仁 - 2樓
                        option(value='global13f') 環球 - 3樓
                        option(value='global12f') 環球 - 12樓
                div(style='margin: 0 20px 20px 20px;')
                  .row
                    .col-md-12.form-group.has-success
                      label 查詢教室:
                      select#selectClass.form-control
                        option(value='請選擇') 請選擇
                        option(value='教室一') 教室一
                        option(value='教室二') 教室二
                        option(value='教室三') 教室三
                        option(value='教室四') 教室四
                        option(value='教室五') 教室五
                div(style='margin: 0 20px 20px 20px;')
                  .row
                    .col-md-12.form-group.has-success
                      label 查詢時段:
                      select#select.form-control
                        option(value='請選擇') 請選擇
                        option(value='時段一') 時段一
                        option(value='時段二') 時段二
                        option(value='時段三') 時段三
                        option(value='時段四') 時段四
                        option(value='時段五') 時段五
                div(style='margin: 0 20px 20px 20px;')
                  .row
                    .col-md-18.form-group.has-success
                      .col-md-6
                        input.date-picker.form-control(type='text', id='', placeholder='開始時間')
                      .col-md-6
                        input.date-picker.form-control(type='text', id='', placeholder='結束時間')
                  .row
                    .col-md-12(style='text-align:center;')
                      button#btnReset.btn.btn-default(type='button') 清除
                      button#btnSelect.btn.btn-success(type='button') 查詢
                br
                br
    #center.panel(style='border:2px solid black;')
      .row
        .col-lg-12
          .form-group
            .row
              .col-md-12
                div(style='margin: 20px 20px 20px 20px;overflow-y:scroll;overflow-x:hidden;')
                  .row
                    .col-md-12(style='height:400px;')
                      table#lessonList.table.table-condensed
                        tr
                          th(width='10%') #
                          th(style='border-left:1px #ddd solid;') 課程名稱
                          th(width='20%', style='border-left:1px #ddd solid;') 時間
                          th(width='5%', style='border-left:1px #ddd solid;')
                        tbody#lesson
                        tr#nobodyList.tr-empty(align='center')
                          td(colspan='3')
                            br
                            span#new(style='cursor:pointer;')
                              i.fa.fa-plus-circle.fa-3x
                              | 															新增課程
              .col-md-12
                .paginationWrap.pagesCenter
                  nav
                    ul#pageList.pagination
                      li
                        a(href='#') 第一頁
                      li
                        a(href='#', onclick='return false;')
                          span(aria-hidden='true') «
                          span.sr-only Previous
                      li
                        a(href='#') 1
                      li
                        a(href='#') 2
                      li
                        a(href='#') 3
                      li
                        a(href='#') 4
                      li
                        a(href='#') 5
                      li
                        a(href='#') 6
                      li
                        a(href='#') 7
                      li
                        a(href='#') 8
                      li
                        a(href='#') 9
                      li
                        a(href='#') 10
                      li
                        a(href='#', onclick='return false;')
                          span(aria-hidden='true') »
                          span.sr-only Next
                      li
                        a(href='#', onclick='return false;') 尾頁
    #right
    #lessonDetail.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
      .modal-dialog.modal-lg
        .modal-content
          .modal-header.bg-dark
            button.close(type='button', data-dismiss='modal', aria-hidden='true')
              i.icons-office-52
            h4.modal-title
              strong#detailName
          .modal-body
            table.table.table-hover
              tr
                th #
                th 課程名稱
                th 課程時數
                th 使用教室
                th 上課時段
                th 備註
                th
