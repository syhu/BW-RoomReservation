    #manager_center.panel
      .row
        .col-lg-12
          .form-group
            .row
              .col-md-12
                div(style='text-align: center;')   
                  h3
                    i.fa.fa-users                            
                    strong(style='margin-left:5px;') 課程管理
                  br
                table.table.table-bordered
                  tr
                    th 地點
                    th
                      select#filterLocal.form-control
                        option(value='請選擇') 請選擇
                        option(value='7f') 7樓
                        option(value='12f') 12樓
                        option(value='13f') 13樓
                        option(value='liren2f') 里仁 - 2樓
                        option(value='global13f') 環球 - 3樓
                        option(value='global12f') 環球 - 12樓
                    th 教室
                    th
                      select#filterClass.form-control
                        option(value='請選擇') 請選擇
                        option(value='教室一') 教室一
                        option(value='教室二') 教室二
                        option(value='教室三') 教室三
                        option(value='教室四') 教室四
                        option(value='教室五') 教室五
              
                    th 時段
                    th
                      select#filterTimeZone.form-control
                        option(value='請選擇') 請選擇
                        option(value='時段一') 時段一
                        option(value='時段二') 時段二
                        option(value='時段三') 時段三
                        option(value='時段四') 時段四
                        option(value='時段五') 時段五
                  tr(style='border:0px;')
                    th(colspan='6')
                      button#cancelFilter.btn.btn-default(type='button') 清除
                      button#btnFilter.btn.btn-primary(type='button') 查詢

              .col-md-12
                div(style='margin: 20px 20px 20px 20px;overflow-y:scroll;overflow-x:hidden;')
                  .row
                    .col-md-12(style='height:50px;')
                      button.btn.btn-success.new(style='float:right;margin-top:0px;') 新增課程
                      font#todayTime 今天時間：
                    .col-md-12(style='height:650px;')
                      table#lessonList.table.table-condensed
                        tr
                          th(width='5%') #
                          th(width='55%', style='border-left:1px #ddd solid;', colspan='2') 課程名稱
                          th(width='15%', style='border-left:1px #ddd solid;') 使用教室
                          th(width='15%', style='border-left:1px #ddd solid;') 時間 - 時段
                          th(width='10%', style='border-left:1px #ddd solid;')
                        if showLesson
                          - var sn = 0
                          - var color = ''
                          - for lesson in showLesson
                            - sn = sn +1
                            - if (sn%3 == 0)
                              - color = 'danger'
                            - else if(sn%3 == 1)
                              - color = 'warning'
                            - else if(sn%3 == 2)
                              - color = 'active'
                            tr(class=color, style='cursor:pointer;', id=lesson.lessonID)   
                              th #{sn}
                              th(style='text-align:left;border-left:1px #ddd solid;') 
                                |#{lesson.name}
                              th(style='text-align:left;border-left:1px #ddd solid;border-left-style:none')   
                              th(style='text-align:center;border-left:1px #ddd solid') #{lesson.lessonClass} 
                              th(style='text-align:center;border-left:1px #ddd solid') #{lesson.time} - #{lesson.period} 
                              th(style='text-align:center;border-left:1px #ddd solid')
                                ul
                                  li(class='dropdown')
                                    a(class='dropdown-toggle' data-toggle='dropdown')
                                      i(class='fa fa-bars')
                                    ul(class='dropdown-menu')
                                      li
                                        a(href='#' id='edit2' style='font-size:15px;' class='dropdown-toggle' data-toggle='dropdown') 編輯
                                      li
                                        a(href='#' id='delete2' style='font-size:15px;' class='dropdown-toggle' data-toggle='dropdown') 刪除
                        tbody#lesson
                        tr#nobodyList.tr-empty(align='center')
                          td(colspan='5')
                            br
                            span#new.new(style='cursor:pointer;')
                              i.fa.fa-plus-circle.fa-3x
                              | 															新增課程
              .col-md-12
                .paginationWrap.pagesCenter
                  nav
                    ul#pageList.pagination
                      li
                        a(href='#') 第一頁
                      li
                        a(href='#', onclick='return false;')
                          span(aria-hidden='true') 
                          span.sr-only Previous
                      li
                        a(href='#') 1
                      li
                        a(href='#') 2
                      li
                        a(href='#') 3
                      li
                        a(href='#') 4
                      li
                        a(href='#') 5
                      li
                        a(href='#') 6
                      li
                        a(href='#') 7
                      li
                        a(href='#') 8
                      li
                        a(href='#') 9
                      li
                        a(href='#') 10
                      li
                        a(href='#', onclick='return false;')
                          span(aria-hidden='true') »
                          span.sr-only Next
                      li
                        a(href='#', onclick='return false;') 尾頁
    #manager_right
    #lessonDetail.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
      .modal-dialog.modal-lg
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true')
              i.icons-office-52
            h4.modal-title
              strong#detailName
          .modal-body
